source 'git@github.com:CocoaPods/Specs.git'

platform :ios, '9.0'
use_frameworks!

project 'NexmoConversationObjC.xcodeproj'

use_frameworks!

def shared_pods
    pod 'VPSocketIO'#, :path => "../VPSocketIO"
end

target 'StitchTestApp' do
    shared_pods
end

target 'NexmoConversationObjC' do
    shared_pods
    
    target 'NexmoConversationObjCTests' do
        inherit! :search_paths
        
        pod 'OCMock', '3.4'

    end
end



post_install do |installer|
    installer.pods_project.targets.each do |target|
        if target.name == 'NexmoConversationObjCTests'
            target.build_configurations.each do |config|
                config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = "YES"
            end
        end
    end
end
