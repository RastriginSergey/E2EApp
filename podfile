source 'git@github.com:CocoaPods/Specs.git'
source 'git@github.com:Vonage/NexmoCocoaPodSpecs.git'

platform :ios, '9.0'
use_frameworks!

project 'Stitch_iOS.xcodeproj'

use_frameworks!

def shared_pods
    pod 'VPSocketIO'#, :path => "../VPSocketIO"
    pod 'MiniRTC_Release', '0.01.45'
    #pod 'MiniRTC_Debug', '0.01.19'
    #pod 'MiniRTC_Debug', :path => "~/.m2/repository/ios/debug"
end

target 'StitchTestApp' do
    # pod 'NexmoStitchObjC', :path => "."
    shared_pods
end

target 'StitchObjC' do
    shared_pods
    
    target 'StitchObjCTests' do
        inherit! :search_paths
        
        pod 'OCMock', '3.4'

    end
end



post_install do |installer|
    installer.pods_project.targets.each do |target|
        if target.name == 'NexmoConversationObjCTests'
            target.build_configurations.each do |config|
                config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = "YES"
            end
        end
    end
end
